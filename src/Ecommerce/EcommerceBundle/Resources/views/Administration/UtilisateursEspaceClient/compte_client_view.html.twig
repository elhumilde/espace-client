{% extends "::layout/base_statistics.html.twig" %}


{% block title %} Mise à jour client {% endblock %}
{% block stylesheets %}

<style>
    
    .demo{
        display: none;
    }



</style>

{% endblock %}

{% block menu %}
    {% include "EcommerceBundle:Administration:menu.html.twig" %}
{% endblock %}

{% block body %}





        
                    <div class="col-lg-12 col-md-12 col-sm-8 col-xs-12 row">
                        <div class="col-lg-6 col-md-8 col-sm-8 col-xs-12">
                            <h4 class="page-title">Mise a jour mot de passe <span class="page-title2" ></span></h4>
                        </div>
                        <div class="col-lg-6 col-md-8 col-sm-8 col-xs-12" >
                            <h4 style="float: right;"></h4>
                        </div>
                        <input type="hidden" name="audience" id="audience" value="audience">
                    </div>
                    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                        <div class="d-md-flex">
                            <!-- <ol class="breadcrumb ms-auto">
                                <li><a href="#" class="fw-normal">Dashboard</a></li>
                            </ol>
                            <a href="https://www.wrappixel.com/templates/ampleadmin/" target="_blank"
                                class="btn btn-danger  d-none d-md-block pull-right ms-3 hidden-xs hidden-sm waves-effect waves-light text-white">Upgrade
                                to Pro</a> -->
                        </div>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                

                <div class="row">
                    
                    <!-- Column -->
                    <div class="col-lg-8 col-xlg-9 col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <form class="form-horizontal form-material" action="{{ path('updateCompteClient', { 'code_firme' : client[0]['code_firme'] }) }}" method="post">

                                    {% for flash_message in app.session.flashBag.get('danger') %}
                                       <div class="alert alert-danger">
                                         {{ flash_message }}
                                       </div>
                                    {% endfor %}

                                    {% for message in app.session.flashBag.get('success') %}
                                        <div class="alert alert-success">
                                            {{ message }}
                                        </div>
                                    {% endfor %}

                                    
                                    <div class="form-group mb-4">
                                        <label class="col-md-12 p-0">Raison sociale</label>
                                        <div class="col-md-12 border-bottom p-0">
                                            <input type="text" placeholder="" class="form-control p-0 border-0" value="{{ client[0]['raison_sociale'] }}" disabled> 
                                        </div>
                                    </div>
                                    <div class="form-group mb-4">
                                        <label for="example-email" class="col-md-12 p-0">Email</label>
                                        <div class="col-md-12 border-bottom p-0">
                                            <input type="email" placeholder="votre email" class="form-control p-0 border-0" name="email"
                                                id="email" value="{{ client[0]['email'] }}" >
                                        </div>
                                    </div>

                                    <div class="form-group mb-4">
                                        <label class="col-md-12 p-0">Nouveau mot de passe</label>
                                        <div class="col-md-12 border-bottom p-0">
                                            <input type="password" value="" class="form-control p-0 border-0" name="npassword" id="npassword" placeholder="Nouveau mot de passe">
                                        </div>
                                        <span style="color: red; font-size: 12px;">On vous propose le mot de passe : ma{{ client[0]['code_firme'] }}</span>
                                    </div>
                                    
                                    <div class="form-group mb-4">
                                        <div class="col-sm-12">
                                            <button class="btn btn-success">Valider</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- Column -->
                </div>

            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
            <footer class="footer text-center"> 2021 © Statistics Powered By <a
                    href="https://www.telecontact.ma/">Télécontact</a>
            </footer>
            <!-- ============================================================== -->
            <!-- End footer -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Page wrapper  -->
        <!-- ============================================================== -->

     

