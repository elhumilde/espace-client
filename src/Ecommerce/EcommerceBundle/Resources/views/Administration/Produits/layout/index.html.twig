<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/style-admin.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/nprogress.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" />
    <link rel="stylesheet" href="{{ asset('font-awesome/css/font-awesome.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/custom.min.css') }}" />
    <title>E-contact | Accueil </title>

</head>
<body class="nav-md">
<div class="container body">
    <div class="main_container">
        <div class="col-md-3 left_col">
            <div class="left_col scroll-view">
                <div class="navbar nav_title" style="border: 0;">
                    {#<a > <img class="logo" src="https://image.noelshack.com/fichiers/2018/07/4/1518687555-logo-econtact-2.png" alt="logo"></a>#}
                </div>

                <div class="clearfix"></div>
                <br />

                <!-- sidebar menu -->
                {% include "EcommerceBundle:Administration:menu.html.twig" %}
                <!-- /sidebar menu -->


            </div>
        </div>

        <!-- top navigation -->
        <div class="top_nav">
            <div class="nav_menu">
                <nav>
                    <div class="nav toggle">
                        <a id="menu_toggle"><i class="fa fa-bars"></i></a>

                    </div>

                    <ul class="nav navbar-nav navbar-right">

                    </ul>
                </nav>
            </div>
        </div>
        <!-- /top navigation -->

        <!-- page content -->
        <div class="right_col" role="main">
            <div class="clearfix"></div>

            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">


                        {% block body -%}
                            <h1>Liste des produits</h1>

                            {% for flashMessage in app.session.flashbag.get('success') %}
                                <div class="alert alert-success">
                                    {{ flashMessage }}
                                </div>
                            {% endfor %}
                            <input type="number" value="{{ produits|length  }}" readonly>
                            <table id="datatable-fixed-header" class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>Code </th>
                                    <th>Nom</th>
                                    <th>Prix</th>
                                    <th>Description</th>
                                    <th>Description</th>
                                    <th>Categorie</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entity in produits %}
                                    <tr>
                                        <td>{{ entity.codeprod }}</td>
                                        <td>{{ entity.nom }}</td>
                                        <td>{{ entity.prix }}</td>
                                        <td>{{ entity.description }}</td>
                                        <td>{{ entity.description }}</td>
                                        <td>{{ entity.categorie.nomcategorie }}</td>
                                        <td>
                                            <a href="{{ path('adminProduits_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="navigation">
                                {{ knp_pagination_render(produits) }}
                            </div>
                        {% endblock %}

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>


<!-- /page content -->
<script src="{{ asset('js/bootstrap.js') }}"></script>

<!-- jQuery -->
<script src="{{ asset('js/admin/jquery.min.js') }}"></script>
<!-- Bootstrap -->
<script src="{{ asset('js/admin/bootstrap.min.js') }}"></script>
<!-- FastClick -->
<script src="{{ asset('js/admin/fastclick.js') }}"></script>
<!-- NProgress -->
<script src="{{ asset('js/admin/nprogress.js') }}"></script>
<!-- validator -->
<script src="{{ asset('js/admin/validator.js') }}"></script>

<!-- Custom Theme Scripts -->
<script src="{{ asset('js/custom.min.js') }}"></script>
{#<script src="js/jquery.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/scripts.js"></script>#}

</body>
</html>





